<div class="container">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
	<div class="row">
		<div class="col-lg-2">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可 -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td class="comment-count"><%= @book.book_comments.count %>件のコメント</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<!--books一覧 -->

